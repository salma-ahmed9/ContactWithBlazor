@page "/ContactList"
@inject HttpClient Http;
@inject NavigationManager nav;
@inject AuthenticationStateProvider CustomAuthenticationStateProvider
@using ContactWithBlazor.Client;
@using Microsoft.Extensions.Localization;
@using System.Globalization;
@inject IStringLocalizer<Index> L;
<AuthorizeView>
    <Authorized>
        <div class="card" style="margin:19px;">
            <h2 style="text-align:center; padding:12px;">@L["contactlist"]</h2>
        </div>
        <p style="padding-left:17px; font-weight:600"> @L["searchby"]</p>
        <div class="mb-3" style="margin-left:20px;  ">
            <div class="row">
                <div class="col-3">
                   <input type="text" id="searchby" @bind="SearchText" @bind:event="oninput" @bind:after="PerformSearch" style="width:400px;"  />
                </div>
            </div>
        </div>
        <div style="padding:20px;">
            <table class="table table-bordered table-striped">
                <thead style="background-color: cornflowerblue;">
                    <tr>
                        <th>
                            @L["firstname"]
                        </th>
                        <th>
                            @L["lastname"]
                        </th>
                        <th>
                            @L["email"]
                        </th>
                        <th>
                            @L["title"]
                        </th>
                        <th>
                            @L["description"]
                        </th>
                        <th>
                            @L["birth"]
                        </th>
                        <th>
                            @L["marriage"]
                        </th>
                        <AuthorizeView Context="authContext" Roles="Admin">
                            <Authorized><th>@L["actions"]</th></Authorized>
                        </AuthorizeView>
                        
                    </tr>
                </thead>
                <tbody id="myTable">
                    @foreach (var item in ContactList)
                    {
                        <tr>
                            <th>@item.FirstName</th>
                            <th>@item.LastName</th>
                            <th>@item.Email</th>
                            <th>@item.Title</th>
                            <th>@item.Description</th>
                            <th>@item.BirthDate.Date</th>
                            <th>@(item.MarriageStatus ? "Yes" : "NO") </th>
                            <AuthorizeView Context="authContext" Roles="Admin">
                                <Authorized>
                                    <th>
                                        <div style="display: flex;">
                                            <button type="submit" class="btn" @onclick="async () => await Edit(item.Id.ToString())">@L["edit"]</button>
                                        </div>
                                    </th>
                                    
                                </Authorized>
                            </AuthorizeView>
                           
                        </tr>
                    }
                    <style>
                        .btn {
                            text-decoration: none;
                            background-color: deeppink;
                            color: white;
                            margin-right: 10px;
                        }

                        .btn-red {
                            text-decoration: none;
                            background-color: darkred;
                            color: white;
                        }
                    </style>
                </tbody>
            </table>
        </div>
    </Authorized>
</AuthorizeView>


@code 
{
    private string SearchText = "";
    public List<Contact> ContactList { get; set; } = new();
    protected override async Task OnInitializedAsync()
    {
        ContactList = await Http.GetFromJsonAsync<List<Contact>>("/existingcontact");
    }
    private async Task Edit(string id)
    {
        nav.NavigateTo($"/EditContact/{id}");
    }
    private async Task PerformSearch()
    {
        if(string.IsNullOrEmpty(SearchText))
        {
            ContactList = await Http.GetFromJsonAsync<List<Contact>>("/existingcontact");
        }
        else
        {
            ContactList = await Http.GetFromJsonAsync<List<Contact>>($"/SearchContact/{SearchText}");
        }
        
    }
}
